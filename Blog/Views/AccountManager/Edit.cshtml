@model Blog.ViewModels.UserEditViewModel
@{
    ViewBag.Title = "UserEdit";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h4 class="mb-3">Редактирование пользователя</h4>
<form class="needs-validation" novalidate asp-controller="AccountManager" asp-action="Update">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row g-3">
        <div class="col-12">
            <label for="firstname" class="form-label">Идентификатор</label>
            <input asp-for="UserId" type="text" class="form-control" id="firstName" placeholder required />
            <span asp-validation-for="UserId" class="text-danger"></span>
            <div class="invalid-feedback">
                " Введите имя"
            </div>
        </div>
        <div class="col-12">
            <label for="firstname" class="form-label">Имя</label>
            <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder required />
            <span asp-validation-for="FirstName" class="text-danger"></span>
            <div class="invalid-feedback">
                " Введите имя"
            </div>
        </div>
        <div class="col-12">
            <label for="lastname" class="form-label">Фамилия</label>
            <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder required />
            <span asp-validation-for="LastName" class="text-danger"></span>
            <div class="invalid-feedback">
                " Введите фамилию"
            </div>
        </div>
        <div class="col-12">
            <label for="email" class="form-label">Почтовый адрес</label>
            <input asp-for="Email" type="email" class="form-control" id="email" placeholder="you@example.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <div class="invalid-feedback">
                " Введите коректный адрес электронной почты"
            </div>
        </div>
        <div class="col-12">
            <label for="image" class="form-label">Изображение</label>
            <input asp-for="ImageUrl" type="text" class="form-control" id="imageurl" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
            <div class="invalid-feedback">
                " Введите коректный пароль"
            </div>
        </div>
    </div>
    <hr class="my-4" />
    <button class="w-100 btn btn-primary btn-lg" type="submit">Зарегистрироваться</button>
</form>
