@model Blog.ViewModels.LoginViewModel;
@{
    ViewBag.Title = "Signin";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<form asp-controller="AccountManager" asp-action="Login">
    <h1 class="h3 mb-3 fw-normal">Вход в приложение</h1>
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-floating">
        <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
        <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <label for="floatingPassword">Password</label>
    </div>
    <div class="form-check">
        <input asp-for="RememberMe" type="checkbox" class="form-check-input">
        <label class="form-check-label" for="remembeMe">Запоминить меня</label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Войти</button>
    <div class="container">
        Еще нет аккаунта? <a asp-area="" asp-controller="Register" asp-action="Register">Зарегистрируйтесь</a>
    </div>
</form>
