@model Blog.ViewModels.CommentViewModel

<form asp-controller="Comments" asp-action="NewComment">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="row g-3">
        <div class="col-12">
            <input asp-for="PostId" type="hidden" />
            <textarea class="form-control" asp-for="Text" placeholder required></textarea>
            <span asp-validation-for="Text" class="text-danger"></span>
            <div class="invalid-feedback">
                " Добавьте текст комментария"
            </div>
        </div>
    </div>
    <button class="w-100 btn btn-primary btn-lg" type="submit">Оставить комментарий</button>
</form>